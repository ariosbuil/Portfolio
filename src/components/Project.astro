---
interface Props {
    title: string;
    description: string;
    href: string;
    img: string;
}

const { title, description, href, img } = Astro.props;
---

<div class="card-project">
    <a href={href}>
        <div class="card-body">
            <h2>{title}</h2>
            <p>{description}</p>
        </div>
        <img src={img} alt="" />
    </a>
</div>

<style>
    .card-project {
        width: 100%;
        position: relative;
        overflow: hidden;
        border-radius: 15px;
        height: 600px;
    }

    .card-project img {
        width: 100%;
        height: 100%;
    }

    .card-project:hover .card-body {
        opacity: 1;
    }

    .card-body {
        position: absolute;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        opacity: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 10px;
    }

    .card-body h2, p {
        text-align: center;
    }

    @media screen and (max-width: 400px) {
        .card-project {
            width: 350px;
        }
    }

</style>
