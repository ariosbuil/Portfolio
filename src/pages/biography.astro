---
import Layout from "../layouts/Layout.astro";
import Quote from "../components/Quote.astro";
import BiographyPhoto from "../images/Biography-photo.jpg";
import IconAstro from "../images/tech-stack/astro-icon.svg";
import IconCss from "../images/tech-stack/css-3.svg";
import IconExpress from "../images/tech-stack/express.svg";
import IconHtml from "../images/tech-stack/html-5.svg";
import IconJava from "../images/tech-stack/java.svg";
import IconJavaScript from "../images/tech-stack/javascript.svg";
import IconMYSql from "../images/tech-stack/mysql-icon.svg";
import IconNodeJS from "../images/tech-stack/nodejs.svg";
import IconPHP from "../images/tech-stack/php.svg";
import IconTailwind from "../images/tech-stack/tailwindcss-icon.svg";
---

<Layout title="Biography">
    <main>
        <div class="flex flex-col gap-4">
            <!-- Link to Go Back -->
            <div class="flex gap-4">
                <h1 class="text-3xl">ARNAU RIOS BUIL</h1>
                <p class="self-end">
                    <a href="/" class="hover:text-text-hover hover:underline"
                        >INDEX</a
                    > / <span>BIOGRAPHY</span>
                </p>
            </div>
            <!-- Biography Content 1st Row -->
            <div class="grid lg:grid-cols-3 gap-4">
                <!-- Quotes -->
                <div class="lg:col-span-2 p-4 bg-card flex gap-4 rounded">
                    <div>
                        <img
                            class="h-[400px] object-cover rounded shadow-md"
                            src={BiographyPhoto.src}
                            alt="Portrait Photo"
                        />
                    </div>
                    <div class="grid lg:grid-cols-2 gap-4 w-full">
                        <Quote text="Esto es una prueba" />
                        <Quote text="Esto es una prueba" />
                        <Quote text="Esto es una prueba" />
                        <Quote text="Esto es una prueba" />
                    </div>
                </div>
                <!-- Photo Gallery -->
                <div class="lg:col-span-1 p-4 bg-card rounded"></div>
            </div>
            <!-- Biography Content 2nd Row -->
            <div class="grid lg:grid-cols-3 gap-4">
                <!-- Tech Stack -->
                <div class="lg:col-span-1 p-4 bg-card rounded">
                    <div class="logos flex">
                        <div class="logos-slide flex">
                            <img src={IconAstro.src} alt="" />
                            <img src={IconCss.src} alt="" />
                            <img src={IconExpress.src} alt="" />
                            <img src={IconHtml.src} alt="" />
                            <img src={IconJava.src} alt="" />
                            <img src={IconJavaScript.src} alt="" />
                            <img src={IconMYSql.src} alt="" />
                            <img src={IconNodeJS.src} alt="" />
                            <img src={IconPHP.src} alt="" />
                            <img src={IconTailwind.src} alt="" />
                        </div>
                        <div class="logos-slide flex">
                            <img src={IconAstro.src} alt="" />
                            <img src={IconCss.src} alt="" />
                            <img src={IconExpress.src} alt="" />
                            <img src={IconHtml.src} alt="" />
                            <img src={IconJava.src} alt="" />
                            <img src={IconJavaScript.src} alt="" />
                            <img src={IconMYSql.src} alt="" />
                            <img src={IconNodeJS.src} alt="" />
                            <img src={IconPHP.src} alt="" />
                            <img src={IconTailwind.src} alt="" />
                        </div>
                    </div>
                </div>
                <div class="lg:col-span-2 p-4 bg-card rounded"></div>
            </div>
        </div>
    </main>
</Layout>

<style>
    :root {
    }

    main {
        color: white;
        line-height: 1.6;
        height: 100%;
        padding: 1rem;
    }

    .logos {
        overflow: hidden;
        padding: 60px 0;
        background: white;
        white-space: nowrap;
        position: relative;
    }

    .logos-slide {
        animation: slide 5s infinite linear;
        display: inline-block;
    }

    .logos-slide > img {
        height: 100px;
        margin: 0 80px;
    }

    @keyframes slide {
        from {
            transform: translateX(0);
        }
        to {
            transform: translateX(-100%);
        }
    }
</style>
